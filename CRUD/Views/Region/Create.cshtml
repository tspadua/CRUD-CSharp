@model CRUD.Models.Region

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="pl-3" style="color: #FB4B4E">Add Region</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row justify-content-center">
                    <div>
                        <label asp-for="Name">Region Name</label>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-4">
                        <input type="text" asp-for="Name" id="charname" class="form-control">
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-6 justify-content-center row">
                        <div class="col-3">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                        <div class="col-3">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                    </div>
                </div>
                    
            </div>
        </div>
    </div>
</form>
