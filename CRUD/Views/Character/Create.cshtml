@model CRUD.Models.CharacterViewModel

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="pl-3" style="color: #FB4B4E">Add Character</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Character.Name"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Character.Description"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Character.Image"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Character.RegionId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input type="text" asp-for="Character.Name" id="charname" class="form-control">
                    </div>
                    <div class="col-3">
                        <input type="text" asp-for="Character.Description" id="chardescription" class="form-control">
                    </div>
                    <div class="col-3">
                        <input type="text" asp-for="Character.Image" id="charimage" class="form-control">
                    </div>
                    <div class="col-3">
                        <select id="regions" asp-for="Character.RegionId" class="form-control">
                            @foreach (var region in Model.Regions)
                            {
                                <option text="@region.Name" value="@region.Id">@region.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
